{
    "name": "lwc-vue",
    "description": "LWC with Vue app",
    "version": "1.0.0",
    "author": "STUkh",
    "bugs": "https://github.com/STUkh/lwc-vue/issues",
    "dependencies": {
        "lightning-base-components": "^1.17.7-alpha"
    },
    "devDependencies": {
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-decorators": "^7.21.0",
        "@babel/preset-env": "^7.21.4",
        "@jest/core": "29.5.0",
        "@jest/environment": "29.5.0",
        "@lwc/jest-preset": "^11.8.0",
        "@lwc/jest-transformer": "^11.8.0",
        "@lwc/module-resolver": "^2.42.0",
        "@salesforce-ux/design-system": "^2.20.1",
        "@salesforce/eslint-config-lwc": "^3.4.0",
        "@salesforce/sfdx-lwc-jest": "^1.3.0",
        "@vue/babel-preset-app": "^5.0.8",
        "@vue/babel-preset-jsx": "^1.4.0",
        "@vue/compiler-sfc": "^3.2.47",
        "babel-jest": "29.5.0",
        "babel-loader": "^9.1.2",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.7.3",
        "eslint": "^7.20.0",
        "eslint-plugin-inclusive-language": "^2.2.0",
        "eslint-plugin-vue": "^9.11.0",
        "file-loader": "^6.2.0",
        "html-loader": "^4.2.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^5.0.9",
        "identity-obj-proxy": "^3.0.0",
        "jest": "29.5.0",
        "jsdom": "^21.1.1",
        "lint-staged": "^10.5.4",
        "lwc": "^2.42.0",
        "lwc-webpack-plugin": "^3.0.3",
        "prettier": "^2.2.1",
        "style-loader": "^3.3.2",
        "vue": "^3.2.47",
        "vue-loader": "^17.0.1",
        "webpack": "^5.77.0",
        "webpack-bundle-analyzer": "^4.8.0",
        "webpack-cli": "^5.0.1",
        "webpack-dev-server": "^4.13.2"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=7.0.0"
    },
    "homepage": "https://github.com/STUkh/lwc-todomvc",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "repository": "STUkh/lwc-todomvc",
    "scripts": {
        "analyze": "webpack-bundle-analyzer dist/stats.json",
        "build": "webpack build --mode production",
        "build:development": "webpack build --mode development",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "test:unit": "sfdx-lwc-jest",
        "test:unit:coverage": "sfdx-lwc-jest --coverage",
        "test:unit:debug": "sfdx-lwc-jest --debug",
        "test:unit:watch": "sfdx-lwc-jest --watch",
        "templates": "node config/transpile-vue-jsx.js --src=force-app/main/default/lwc --vue-lib=c/vueLib",
        "templates:watch": "node config/transpile-vue-jsx.js --src=force-app/main/default/lwc --vue-lib=c/vueLib --watch",
        "watch": "webpack serve --mode development"
    }
}
